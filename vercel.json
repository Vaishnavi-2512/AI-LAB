{
  "version": 2,
  "builds": [{ "src": "vite.config.*", "use": "@vercel/static-build" }],
  "framework": "vite",
  "outputDirectory": "dist",

  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
